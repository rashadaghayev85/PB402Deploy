@model IEnumerable<BlogVM>

<div class="container">
    <div class="card-body">
        <h4 class="card-title">Blogs</h4>
        <a asp-area="Admin" asp-controller="Blog" asp-action="Create" class="btn btn-success">Create</a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Created date</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                <img src="~/assets/images/our-blog/@item.Image" style="width:80px; height:80px; border-radius:0;" />
                            </td>
                            <td>
                                @item.CreatedDate.ToString("dd MMM yyyy")
                            </td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
