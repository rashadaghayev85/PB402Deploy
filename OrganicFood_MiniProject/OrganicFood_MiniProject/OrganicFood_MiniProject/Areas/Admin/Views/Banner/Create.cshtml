@model BannerCreateVM

<form method="post" asp-area="Admin" asp-controller="Banner" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Page</label>
        <input type="text" asp-for="Page" class="form-control" required />
        <span asp-validation-for="Page" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputUsername1">Banner Image</label>
        <input class="form-control" id="exampleInputUsername1" asp-for="UploadImage">
        <span asp-validation-for="UploadImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a asp-controller="Banner" asp-action="Index" class="btn btn-light">Cancel</a>
</form>