@model DiscountCreateVM

<form method="post" asp-area="Admin" asp-controller="Discount" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label for="input" class="control-label">Name</label><i class="bar"></i>
        <input type="text" required="required" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="input" class="control-label">Discount Percent</label><i class="bar"></i>
        <input type="number" required="required" asp-for="DiscountPercent" min="1" max="100" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a asp-controller="BlogCategory" asp-action="Index" class="btn btn-light">Cancel</a>
</form>