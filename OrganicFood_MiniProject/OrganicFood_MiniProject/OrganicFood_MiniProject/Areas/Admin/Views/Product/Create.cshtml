@model OrganicFood_MiniProject.Areas.Admin.ViewModels.Product.ProductCreateVM

<div class="card-body">
    <form class="forms-sample" method="post" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>

            <label for="Price">Price</label>
            <input type="number" class="form-control" id="Price" asp-for="Price" step="0.01">
            <span asp-validation-for="Price" class="text-danger"></span>

            <label for="Description">Description</label>
            <textarea class="form-control" id="Description" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

            <label for="CategoryId">Category</label>
            <select class="form-control" id="CategoryId" asp-for="CategoryId" asp-items="Model.Categories">
                <option value="">Select a category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>

            <label for="SelectedDiscountIds">Discounts</label>
            <select class="form-control" id="SelectedDiscountIds" asp-for="SelectedDiscountIds" asp-items="Model.Discounts" multiple></select>
            <span asp-validation-for="SelectedDiscountIds" class="text-danger"></span>

            <label for="MainImage">Main Image</label>
            <input type="file" class="form-control" id="MainImage" asp-for="MainImage">
            <span asp-validation-for="MainImage" class="text-danger"></span>

            <label for="ProductImages">Other Images</label>
            <input type="file" class="form-control" id="ProductImages" asp-for="ProductImages" multiple>
            <span asp-validation-for="ProductImages" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
