@model ProductDetailVM

<div class="card">
    <div class="card-header">
        <h2>@Model.Name</h2>
    </div>
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p><strong>Discounted Price:</strong> $@Model.DiscountedPrice.ToString("0.00")</p>

        @if (!string.IsNullOrEmpty(Model.MainImage))
        {
            <div class="mb-3">
                <p><strong>Main Image:</strong></p>
                <img src="~/assets/images/products/@Model.MainImage" alt="Main Image" class="img-fluid rounded" width="300">
            </div>
        }

        @if (Model.OtherImages != null && Model.OtherImages.Any())
        {
            <div class="mt-3">
                <p><strong>Other Images:</strong></p>
                <div class="d-flex flex-wrap">
                    @foreach (var image in Model.OtherImages)
                    {
                        <img src="~/assets/images/products/@image" alt="Additional Image" class="img-thumbnail me-2" width="100">
                    }
                </div>
            </div>
        }

    </div>
</div>
