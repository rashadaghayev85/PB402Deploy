@model CategoryEditVM

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CurrentImagePath" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">First Title</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UploadImage">Upload New Image</label>
        <input type="file" asp-for="UploadImage" class="form-control" accept="image/*" />
        <span asp-validation-for="UploadImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image:</label>
        <img src="~/assets/images/@Model.CurrentImagePath" alt="Current Image" style="max-width:200px; height:auto;" />
    </div>

    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-light">Cancel</a>
</form>
