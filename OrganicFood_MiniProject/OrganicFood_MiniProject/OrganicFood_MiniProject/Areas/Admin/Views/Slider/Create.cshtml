@model SliderCreateVM

<form method="post" asp-area="Admin" asp-controller="Slider" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label for="input" class="control-label">First Title</label><i class="bar"></i>
        <input type="text" required="required" asp-for="FirstTitle" />
        <span asp-validation-for="FirstTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="input" class="control-label">Second Title</label><i class="bar"></i>
        <input type="text" required="required" asp-for="SecondTitle" />
        <span asp-validation-for="SecondTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="input" class="control-label">Description</label><i class="bar"></i>
        <input type="text" required="required" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputUsername1">Slider Image</label>
        <input class="form-control" id="exampleInputUsername1" asp-for="UploadImage">
        <span asp-validation-for="UploadImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a asp-controller="Slider" asp-action="Index" class="btn btn-light">Cancel</a>
</form>