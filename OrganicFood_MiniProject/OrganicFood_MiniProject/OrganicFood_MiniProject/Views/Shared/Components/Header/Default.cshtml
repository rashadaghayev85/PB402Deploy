@model HeaderVM

<header id="header" class="header-area style-01 layout-03">
    <div class="header-top bg-main hidden-xs">
        <div class="container">
            <div class="top-bar left">
                <ul class="horizontal-menu">
                    <li><a href="#"><i class="fa fa-envelope" aria-hidden="true"></i>@Model.Settings["Email"]</a></li>
                    <li><a href="#">Free Shipping for all Order of $99</a></li>
                </ul>
            </div>
            <div class="top-bar right" style="margin-right: 130px;">
    
                <ul class="horizontal-menu">
                    <li class="horz-menu-item currency">
                        <select name="currency">
                            @foreach (var currency in Model.CurrencyOptions)
                            {
                                var currencyParts = currency.Split(' ');
                                if (currencyParts.Length >= 2)
                                {
                                    var currencyCode = currencyParts[1].ToLower();
                                    var isSelected = Model.Settings["Currency"] == currency;

                                    if (isSelected)
                                    {
                                        <option value="@currencyCode" selected>@currency</option>
                                    }
                                    else
                                    {
                                        <option value="@currencyCode">@currency</option>
                                    }
                                }
                                else
                                {
                                    <option value="@currency" disabled>@currency</option>
                                }
                            }
                        </select>
                    </li>

                    <li class="horz-menu-item lang">
                        <select name="language">
                            @foreach (var language in Model.LanguageOptions)
                            {
                                if (language.Length >= 2)
                                {
                                    var langCode = language.Substring(0, 2).ToLower();
                                    var isSelected = Model.Settings["Language"] == language;

                                    if (isSelected)
                                    {
                                        <option value="@langCode" selected>@language</option>
                                    }
                                    else
                                    {
                                        <option value="@langCode">@language</option>
                                    }
                                }
                                else
                                {
                                    <option value="@language" disabled>@language</option>
                                }
                            }
                        </select>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class=""><a class="px-1" href="">@Model.UserFullName</a></li>
                        <li class="element">
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="btn btn-primary">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login" class="login-link"><i class="biolife-icon icon-login"></i>Login</a></li>
                        <li><a asp-controller="Account" asp-action="Register" class="login-link"><i class="biolife-icon icon-login"></i>Register</a></li>

