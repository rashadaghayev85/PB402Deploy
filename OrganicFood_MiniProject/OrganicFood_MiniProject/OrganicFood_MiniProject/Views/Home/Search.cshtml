@model List<ProductVM>

<h2>Search Results</h2>

@if (Model != null && Model.Any())
{
    <div class="product-list">
        @foreach (var product in Model)
        {
            <div class="product-item">
                <img src="~/assets/images/products/@product.ProductImages.FirstOrDefault()?.Name"
                     alt="@product.Name" class="product-image" />
                <h3>@product.Name</h3>
                <p>Price: <span class="original-price">@product.Price.ToString("C")</span></p>
                @if (product.Price != product.DiscountedPrice)
                {
                    <p>Discounted Price: <span class="discounted-price">@product.DiscountedPrice.ToString("C")</span></p>
                }
                <a href="@Url.Action("Detail", "Product", new { id = product.Id })" class="btn btn-primary">View Details</a>
            </div>
        }
    </div>
}
else
{
    <p>No products found.</p>
}

<style>
    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    
</style>
