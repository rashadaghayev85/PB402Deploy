@model SliderEditVM
<div class="container mt-5">
	<form method="post" asp-action="Edit" enctype="multipart/form-data">
		<div>
			<label for="name">New Product Name</label>
			<input type="text" id="name" asp-for="Product" />
			<span asp-validation-for="Product" class="text-danger d-block mb-2"></span>
		</div>
		<div>
			<label>New Slider Title</label>
			<input type="text" id="name" asp-for="Title" />
			<span asp-validation-for="Title" class="text-danger d-block mb-2"></span>
		</div>
		<div>
			<label>New Slider Description</label>
			<input type="text" id="name" asp-for="Description" />
			<span asp-validation-for="Description" class="text-danger d-block mb-2"></span>
		</div>

		<div class="form-group">
			<label>New Slider Image (Leave empty if you don't want to change)</label>
			<input type="file" id="name" asp-for="NewImage" />
			<span asp-validation-for="NewImage" class="text-danger d-block mb-2"></span>
		</div>
		<button type="submit" class="btn btn-success">Submit</button>
		<a asp-action="Index" class="btn btn-danger">Cancel</a>
	</form>
</div>

@section js {
	<script src="~/admin/assets/js/product.js"></script>
}