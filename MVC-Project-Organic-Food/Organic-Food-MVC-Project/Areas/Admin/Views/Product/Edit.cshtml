@model ProductEditVM
<div class="container mt-5">
	<div class="container mb-3 mt-3 product-images">
		<div class="row">
			@foreach (var item in Model.ProductImages)
			{
				<div class="@(item.IsMain ? "product-exist-images border-main" : "product-exist-images")">
					<img src="~/assets/images/products/@item.Name" style="width:250px;height:200px;" />
					<div class="set-delete-btns" data-id="@item.Id">
						@if (item.IsMain == false)
						{	
								<button class="btn btn-danger delete-btn ">Delete</button>
								<button class="btn btn-primary set-btn ">Set main</button>
						}
					</div>
				</div>
			}
		</div>
	</div>
	<form method="post" asp-action="Edit" enctype="multipart/form-data">
		<div>
			<label for="name">Product Name</label>
			<input type="text" id="name" asp-for="Name" />
			<span asp-validation-for="Name" class="text-danger d-block mb-2"></span>
		</div>
		<div>
			<label>Product Description</label>
			<input type="text" id="name" asp-for="Description" />
			<span asp-validation-for="Description" class="text-danger d-block mb-2"></span>
		</div>
		<div>
			<label>Product Price</label>
			<input type="text" id="name" asp-for="Price" />
			<span asp-validation-for="Price" class="text-danger d-block mb-2"></span>
		</div>
		<div>
			<label>Product Category</label>
			<select asp-for="CategoryId" asp-items="@ViewBag.Categories">
				<option>Select one option</option>
			</select>
			<span asp-validation-for="CategoryId" class="text-danger d-block mb-2"></span>
		</div>
		<div>
			<label>Add Discount</label>
			<select asp-for="NewDiscount" asp-items="@ViewBag.Discounts">
				<option>Select one option</option>
			</select>
			<span asp-validation-for="NewDiscount" class="text-danger d-block mb-2"></span>
		</div>
		<div>
			<label>Remove Discount</label>
			<select asp-for="ExistDiscounts" asp-items="@ViewBag.ExistDiscounts">
				<option>Select one option</option>
			</select>
			<span asp-validation-for="ExistDiscounts" class="text-danger d-block mb-2"></span>
		</div>
		<div class="form-group">
			<label>Product Images</label>
			<input type="file" multiple id="name" asp-for="UploadImages" />
			<span asp-validation-for="UploadImages" class="text-danger d-block mb-2"></span>
		</div>
		<button type="submit" class="btn btn-success">Submit</button>
		<a asp-action="Index" class="btn btn-danger">Cancel</a>
	</form>
</div>

@section js{
	<script src="~/admin/assets/js/product.js"></script>
}