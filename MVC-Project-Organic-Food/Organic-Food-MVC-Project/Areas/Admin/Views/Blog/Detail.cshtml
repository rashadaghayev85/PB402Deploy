@model BlogDetailVM

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Created Date:</strong> @Model.Date</p>
            <p><strong>Category:</strong> @Model.CategoryName</p>
            <p><strong>Likes:</strong> @Model.Like</p>
            <p><strong>Comment:</strong> @Model.Comment</p>
            <div>
                <strong>Description:</strong>
                <p>@Model.Description</p>
            </div>
            <div>
                <strong>Blog Image:</strong>
                <img src="~/assets/images/our-blog/@Model.Image" style="width:300px;height:250px;" class="img-fluid" />
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">Go Back</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <form method="post" asp-action="Delete" asp-route-id="@Model.Id" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
